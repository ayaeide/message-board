<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message, html:{class:"form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :name, "名前:", class:"col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.text_area :name, class:"form-control", placeholder: "名前" %>
    </div>
  </div>
    
  <div class="form-group">
    <%= f.label :body, "内容:", class:"col-md-2 control-label" %>
    <div class="col-md-10">
        <%= f.text_area :body, class:"form-control", placeholder: "内容" %>
    </div>
  </div>
  
  <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-sm btn-primary" %>
      </div>
  </div>
<% end %>